<BaseLayout pageTitle={pageTitle}>
    <h1>Tags</h1>
    <hr />
    <div class="tags-container">
        {
            tags.map((tag) => (
                <a href={`/tags/${tag}`} class='tag-item'>
                    {tag}
                </a>
            ))
        }
    </div>
</BaseLayout>
